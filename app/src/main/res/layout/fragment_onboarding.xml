<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.welcome.FirstFragment">

    <data>
        <variable
            name="boardingVM"
            type="com.test.tribal.ui.welcome.fragments.BoardingFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/empty">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frag_onboard_aciv_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="150sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:src="@drawable/back_2"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frag_onboard_aciv_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:src="@drawable/plant_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>