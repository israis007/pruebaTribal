<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_H1">
        <item name="android:fontFamily">@font/noto_serif_jp_semibold</item>
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_H2">
        <item name="android:fontFamily">@font/noto_serif_jp_bold</item>
        <item name="android:textSize">@dimen/text_h2_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_ACTION">
        <item name="android:fontFamily">@font/noto_serif_jp_bold</item>
        <item name="android:textSize">@dimen/text_action_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_H3">
        <item name="android:fontFamily">@font/red_hat_text_medium</item>
        <item name="android:textSize">@dimen/text_h3_size</item>
        <item name="android:textColor">@color/colorH3</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_P1">
        <item name="android:fontFamily">@font/red_hat_text_regular</item>
        <item name="android:textSize">@dimen/text_p1_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_P2">
        <item name="android:fontFamily">@font/red_hat_text_regular</item>
        <item name="android:textSize">@dimen/text_p2_size</item>
        <item name="android:textColor">@color/colorP</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_P3">
        <item name="android:fontFamily">@font/red_hat_text_regular</item>
        <item name="android:textSize">@dimen/text_p3_size</item>
        <item name="android:textColor">@color/colorP</item>
        <item name="fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
